{
  "name": "Hello Extensions",
  "description": "Base Level Extension",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "downloads",
    "tabCapture",
    "desktopCapture",
    "activeTab",
    "videoCapture",
    "audioCapture",
    "storage"
  ],
  "browser_action": {
    "default_popup": "index.html"
  },
  "background": {
    "scripts": [
      "participantRecorder.js",
      "hostRecorder.js"
    ],
    "persistent": true
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "Opens index.html"
    }
  }
}